<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.skitchen">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.EmailActivity" />
        <activity android:name=".activities.NewUserActivity" />
        <activity
            android:name=".activities.MealDetailActivity"
            android:label="Meal details"
            android:parentActivityName=".activities.PrimaryActivity" />
        <activity
            android:name=".activities.AddMealActivity"
            android:parentActivityName=".activities.PrimaryActivity" />
        <activity android:name=".activities.PrimaryActivity" />
        <activity android:name=".activities.LoginActivity" />
        <!--
<activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>